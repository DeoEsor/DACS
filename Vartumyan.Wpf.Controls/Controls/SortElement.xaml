<UserControl x:Class="Vartumyan.Wpf.Controls.Controls.SortElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Vartumyan.Wpf.Controls.Controls"
             mc:Ignorable="d"
             d:DesignHeight="{DynamicResource Value}" d:DesignWidth="50"
             >
    <Grid>
        <Border Background="Chocolate" Height="100%" Width="100%">
            <TextBox Background="Transparent"
                     VerticalAlignment="Center"
                     TextAlignment="Center"
                     Text="{Binding Source=ValueProperty}"/>
        </Border>
    </Grid>
</UserControl>